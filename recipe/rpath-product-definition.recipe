class rPathProductDefinition(PackageRecipe):
    name = 'rpath-product-definition'
    version = '0.1'

    buildRequires = [
        'lxml:python',
        'make:runtime',
        'python:devel',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addMercurialSnapshot('http://scc.eng.rpath.com/rpath-product-definition')

        r.Make()
        r.MakeInstall()

        # Need :data for the schema definitions
        r.ComponentRequires({'data': set(['python'])})
