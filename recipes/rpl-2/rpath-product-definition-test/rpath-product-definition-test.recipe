loadSuperClass('testpackage=testbits.rb.rpath.com@rpl:1')
class rPathProductDefinitionTest(TestPackageRecipe):
    name = 'rpath-product-definition-test'
    version = '0.1'

    Flags.coverage = True

    buildRequires = [
        'conary-test:python',
        'lxml:python',
        'rpath-product-definition:python',
    ]

    def setupSource(r):
        r.addMercurialSnapshot()

    def install(r):
        r.macros.sitepkg = '%(libdir)s/python%(pyver)s/site-packages'
        r.MakeDirs('%(sitepkg)s')
        r.Run('cp -a proddef_test %(destdir)s%(sitepkg)s/')
